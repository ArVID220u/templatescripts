#!/usr/bin/env python3

# create a new file, with the name as given as the first argument
from sys import argv
from sys import exit
if len(argv) == 1:
    print("Error. Supply the name of the file to be created.")
    exit()

filename = argv[1]
name = argv[1]
if not filename.endswith(".java"):
    filename += ".java"
else:
    name = name[:-5]
force = False
if len(argv) > 2:
    if argv[2] == "-f":
        force = True
warning = False
try:
    sf = open(filename,"r")
    warning = True
    sf.close()
except:
    pass
proceed = True
if warning and not force:
    proceed = False
    print("WARNING: File " + filename + " is not empty. Do you want to overwrite it? (y/N)")
    yn = input()
    if yn.lower() == "y":
        proceed = True
        print("File overwritten. This warning can be circumvented with the flag -f (force).")
    else:
        print("Not overwriting file. This warning can be circumvented with the flag -f (force).")
if proceed:
    new_file = open(filename, "w")
    new_file.write("import javax.swing.*;\nimport java.util.*;\n\npublic class " + name + " {\n\n    public static void main(String[] args) {\n\n\n\n    }\n}")
